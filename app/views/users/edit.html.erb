<a href="/dashboard">Go back to the Dashboard</a>

<% if flash[:edit_error] %>
	<div class="alert alert-danger alert-dismissible" role="alert">
  		<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  		<%= flash[:edit_error] %>
	</div>
<% end %>

<form class="form-horizontal col-md-6">
<h3>General</h3>
  	<div class="form-group">
	    <label for="display_description" class="col-sm-3 control-label">Short Description</label>
	    <div class="col-sm-9">
	      	<textarea class="form-control" rows="7" id="display_description" placeholder="Enter Your Short Description"><%= @edit_user.short_description %></textarea>
	    </div>
  	</div>
  	<div class="form-group">
	    <label for="display_quote" class="col-sm-3 control-label">Quote</label>
	    <div class="col-sm-9">
	      	<textarea class="form-control" id="display_quote" placeholder="Enter Your Quote"><%= @edit_user.quote %></textarea>
	    </div>
  	</div>
  	<div class="form-group">
	    <div class="col-sm-12">
	      	<button type="submit" class="btn btn-user">Edit</button>
	      	<button type="submit" class="btn btn-default">Clear</button>
		</div>
  	</div>
</form>

<form class="form-horizontal col-md-6">
<h3>Security</h3>
	<div class="form-group">
    	<label for="edit_first_name" class="col-sm-3 control-label">First Name</label>
	    <div class="col-sm-9">
	      	<input type="text" class="form-control" id="edit_first_name" placeholder="Enter Your First Name" value="<%= @edit_user.first_name %>">
	    </div>
  	</div>
  	<div class="form-group">
    	<label for="edit_last_name" class="col-sm-3 control-label">Last Name</label>
	    <div class="col-sm-9">
	      	<input type="text" class="form-control" id="edit_last_name" placeholder="Enter Your Last Name" value="<%= @edit_user.last_name %>">
	    </div>
  	</div>
	<div class="form-group">
    	<label for="edit_email" class="col-sm-3 control-label">E-mail</label>
	    <div class="col-sm-9">
	      	<input type="email" class="form-control" id="edit_email" placeholder="Enter the Email" value="<%= @edit_user.email %>">
	    </div>
  	</div>
  	<div class="form-group">
	    <label for="edit_password" class="col-sm-3 control-label">Password</label>
	    <div class="col-sm-9">
	      	<input type="password" class="form-control" id="edit_password" placeholder="Enter the Password">
	    </div>
  	</div>
  	<div class="form-group">
	    <div class="col-sm-12">
	      	<button type="submit" class="btn btn-user">Confirm</button>
	      	<button type="submit" class="btn btn-default">Cancel</button>
	    </div>
	</div>
</form>