<div class="col-md-12">
	<h3>Completed Tallies</h3>
	<% if @completed_tallies %>
	<table class="table table-striped table-hover">
		<thead>
	        <tr>
	            <th class="text-center col-sm-8">Tally</th>
	            <th class="text-center col-sm-4">Date Accomplished</th>
	        </tr>
    	</thead>
    	<% @completed_tallies.each do |one_tally| %>
		<tbody>
			<tr>
				<td>
					<a href="#"><%= one_tally['title'] %></a>
				</td>
				<td><%= one_tally['date_completed'] %></td>
			</tr>
		</tbody>
		<% end %>
	<% else %>
	<p>The blogger has no completed tallies yet.</p>
	<% end %>
	</table>
</div>